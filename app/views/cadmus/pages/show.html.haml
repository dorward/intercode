- admin_bar = capture do
  - if can? :update, @page
    .float-right
      = app_component 'PageAdminDropdown', editUrl: edit_page_path(@page), pageListUrl: pages_path, showDelete: can?(:destroy, @page), pageId: @page.id

- page_content = cadmus_renderer.render(@page.liquid_template, :html, assigns: { 'page' => @page })
- flash_messages_content = render(partial: 'layouts/flash_messages')
- all_content = safe_join([flash_messages_content, admin_bar, page_content].compact, '')

= render_in_cadmus_layout(all_content, @page.effective_cms_layout, 'page' => @page)
