%ul.list-inline
  - event.registration_policy.buckets.each do |bucket|
    %li.list-inline-item.mr-4
      %strong #{bucket.name}:
      - if bucket.slots_limited?
        - if bucket.minimum_slots == bucket.total_slots
          = bucket.total_slots
        - else
          #{bucket.minimum_slots}-#{bucket.total_slots}
      - else
        unlimited
