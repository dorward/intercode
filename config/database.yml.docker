development: &default
  adapter: postgresql
  encoding: unicode
  database: intercode_development
  pool: 5
  username: postgres
  password: postgres
  host: postgres

test:
  <<: *default
  database: intercode_test

production:
  <<: *default
  database: intercode_production
  username: <%= ENV['DB_USER'] %>
  password: <%= ENV['DB_PASSWORD'] %>
  host: <%= ENV['DB_HOST'] %>
